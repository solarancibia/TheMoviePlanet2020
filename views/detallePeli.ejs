<div class="reviews">
  <h2>Watched the movie? Write a review:</h2>
<form class="score" action="/review">
    <div class="uk-margin">
      <div class="uk-inline">
          <span class="uk-form-icon" uk-icon="icon: mail"></span>
          <input class="uk-input" type="text" name="email" placeholder="E-mail" value="" required>
      </div>
    </div>
    <div class="uk-margin">
      <div class="uk-inline">
          <span class="uk-form-icon" uk-icon="icon: lock"></span>
          <input class="uk-input" type="password" name="password" placeholder="Password" value="" required>
      </div>
    </div>
    <div class="uk-width-1-2@s">
      <textarea class="uk-textarea" placeholder="Write your review here..." required></textarea>
    </div>
    <div class="uk-margin contscore">
      <label class="uk-form-label" for="form-horizontal-text">Score /10:</label>
      <br>
      <input class="uk-range uk-width-1-2@s" type="range" value="2" min="0" max="10" step="1">
  </div>
    <br>
    <button class="uk-button uk-button-primary" type="submit">Send</button>
  
</form>
