    </header>
    <p class="saludo">Welcome</p>
    <div class="uk-position-relative uk-visible-toggle uk-light"  tabindex="-1" uk-slider>
      
      <% if (result.length == 0) { %>
    <h1 class="headers">You have no reviews</h1>
    <% } else{ %>
      <h1 class="headers"><%= result[0].user.name%>'s reviews </h1>
      
<section>
  <% for (let i=0 ; i < result.length; i++) { %>
  <div class="uk-card uk-card-default uk-width-1-2@m">
    <div class="uk-card-header">
        <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-auto">
                <img class="uk-border-circle" width="40" height="40" src="/images/avatar.png">
            </div>

            <div class="uk-width-expand">
                <h3 class="uk-card-title uk-margin-remove-bottom">Score: <%result[i].rating %> </h3>
                <p class="uk-text-meta uk-margin-remove-top"><time datetime="2016-04-01T19:00">April 01, 2016</time></p>
            </div>
  
        </div>
    </div>
    <div class="uk-card-body">
        <p><%result[i].review_text %></p>
    </div>
  </div>
</section>
